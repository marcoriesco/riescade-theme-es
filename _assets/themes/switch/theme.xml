<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="system">

        <image name="systemlogo" extra="static">
            <origin>0.5 0</origin>
            <pos>0.4 0.05</pos>

            <storyboard>
                <animation property="scale" from="2" to="1" begin="1000" duration="950" mode="easeOut" />
                <animation property="opacity" from="0" to="1" begin="1500" duration="750" />
            </storyboard>
        </image>

        <image name="char" extra="static">
            <origin>1 0.5</origin>
            <pos>0.767 1.5</pos>
            <size>0 0.55</size>
            <rotation>-3</rotation>

            <storyboard>
                <animation property="x" from="0.767" to="0.767" begin="0" duration="500" mode="easeOut" />
                <animation property="y" from="1.5" to="0.435" begin="2000" duration="500" mode="easeOut" />
            </storyboard>
        </image>

        <image name="char2" extra="static">
            <origin>0 0.5</origin>
            <pos>0.035 -0.5</pos>
            <size>0 0.55</size>
            <rotation>-3</rotation>

            <storyboard>
                <animation property="x" from="0.035" to="0.035" begin="0" duration="500" mode="easeOut" />
                <animation property="y" from="-0.5" to="0.495" begin="2000" duration="500" mode="easeOut" />
            </storyboard>
        </image>

        <image name="char3" extra="static">
            <origin>1 0</origin>
            <pos>1.99 0</pos>
            <size>0 1</size>
            <linearSmooth>true</linearSmooth>
            <path>./_assets/themes/${system.name}/char3.png</path>
            <zIndex>20</zIndex>

            <storyboard>
                <animation property="x" from="1.99" to="1" begin="2500" duration="500" mode="easeOut" />
                <animation property="opacity" from="0" to="1" begin="100" duration="300" />
            </storyboard>
        </image>

        <image name="char4" extra="static">
            <origin>0 1</origin>
            <pos>-0.99 1</pos>
            <size>0 1</size>
            <linearSmooth>true</linearSmooth>
            <path>./_assets/themes/${system.name}/char4.png</path>
            <zIndex>20</zIndex>

            <storyboard>
                <animation property="x" from="-0.99" to="0" begin="900" duration="500" mode="easeOut" />
                <animation property="opacity" from="0" to="1" begin="100" duration="300" />
            </storyboard>
        </image>

        <image name="bezel" extra="static">
            <origin>0.5 0.5</origin>
            <pos>0.4 0.465</pos>
            <size>0.57 0.57</size>

            <storyboard>
                <animation property="opacity" from="0" to="1" begin="1500" duration="550" />
                <animation property="scale" from="2" to="1" begin="1000" duration="750" mode="easeOut" />
            </storyboard>
        </image>

        <video name="video, video_loading" extra="static">
            <origin>0.5 0.5</origin>
            <pos>0.4 0.465</pos>
            <size>0.435 0.435</size>

            <storyboard>
                <animation property="opacity" from="0" to="1" begin="1500" duration="550" />
                <animation property="scale" from="2" to="1" begin="1000" duration="750" mode="easeOut" />
            </storyboard>
        </video>

    </view>

</theme>